<div>
<h1 class="page-header">ログインページ</h1>
<% if flash.notice %>
    <div class="alert alert-info">通知メッセージ：<%= flash.alert %></div>
<% end %>
</div>

<div>
  <%= form_tag('/sessions', method: :post) do %>
      <div class="form-group">
        <table class="table table-bordered">
          <tr>
            <th scope="row"><%= t('activerecord.attributes.member.name') %></th>
            <td><%= text_field_tag :name %></td>
          </tr>
          <tr>
            <th scope="row"><%= t('activerecord.attributes.member.password') %></th>
            <td><%= password_field_tag :password %></td>
          </tr>
        </table>
      </div>
      <div class="form-group">
        <%= submit_tag 'ログイン', class: 'btn btn-default' %>
      </div>
  <% end %>
</div>