<div>
  <h1>編集画面</h1>
  <% if flash.notice %>
    <div class="alert alert-info">通知メッセージ：<%= flash.notice %></div>
  <% end %>
</div>

<div>
  <%= form_for @actor do |form| %>
      <%= render 'form', form: form %>
      <div class="form-group">
        <%= form.submit '更新', class: 'btn btn-default' %>
      </div>
  <% end %>
</div>